.main-list-header .title, .main-list-header .date {
  display: inline-block;
  color: #fff;
  font-size: 30rpx;
  padding: 25rpx;
}

.main-list-header .title {
  background: #db408c;
}

.main-list-header .date {
  background: #b2b2b2;
}

.slide-mask {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  background: #fff;
  z-index: 800;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding: 10px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.weui-media-box {
  padding-right: 5px;
}

.weui-media-box__info {
  color: #888;
}

.weui-media-box__thumb_h {
  width: 98%;
  height: 60px;
  line-height: 60px;
}

.weui-media-box__hd_in-appmsg {
  margin-right: 0;
  width: 108px;
  height: 60px;
  line-height: 60px;
}

.weui-media-box__desc_block {
  color: #999;
  font-size: 13px;
}

.weui-grids {
  border-top: 0;
  border-left: 0;
}

.weui-grid {
  border-right: 0;
  border-bottom: 0;
}

.weui-grid__icon {
  display: block;
  width: 72px;
  height: 72px;
  margin: 0 auto;
  border-radius: 10%;
}

.main-bottom-mk {
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 0;
}

.main-bottom-mk-x {
  width: 54px;
  height: 54px;
  margin: 0 auto;
  display: block;
}
